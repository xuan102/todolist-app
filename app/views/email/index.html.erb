<body class="text-center">

<div class="row">

<div class="col-4">
<table class="table table-bordered table-dark">
  <thead>
      <%= button_to "New mail", email_path(@email), data:{method: "POST"}, class:"btn btn-primary mb-2", remote: true %>
    <tr>
      <th scope="col">Email</th>

    </tr>
  </thead>
  <tbody id="mail_list">
    <% @email.order(:created_at).each do |m|%>
    <tr>
        <%= render 'email', m: m %>
    </tr>
    <% end %>
    

  </tbody>
</table>
</div>
<div class="col-4">
<table class="table table-bordered table-dark">
  <thead>
    <tr>
      <th scope="col">Contenue</th>
    </tr>
  </thead>
  <tbody>
   

    <tr id='contenu'> </tr>
  
     
    </tbody>
</table>
</div>
</div>
</body>